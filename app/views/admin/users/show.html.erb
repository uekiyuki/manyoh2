<h1><%= 'ユーザー詳細' %></h1>

  <%= link_to 'ユーザー一覧', admin_users_path %>

<p><%= t('id') %> : <%= @user.id %></p>
<p><%= t('name') %> : <%= @user.name %></p>
<p><%= t('email') %> : <%= @user.email %></p>
<p><%= t('admin') %> : <%= @user.admin %></p>
<p><%= t('created_at')%> : <%= @user.created_at %></p>
<p><%= t('updated_at')%> : <%= @user.updated_at %></p>

  <%= link_to t('edit'), edit_admin_user_path, class: 'btn btn-danger' %><td>
  <%= link_to t('view.delete'), [:admin, @user], method: :delete, data:{confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？"},class: 'btn btn-danger'%>

<h1><%= 'タスク一覧' %></h1>
  <div class="table">
    <table>
      <tr>
        <th><%= t('view.title')%></th>
        <th><%= t('view.content')%></th>
        <th><%= t('view.time_limit')%></th>
        <th><%= t('view.status')%></th>
        <th><%= t('view.priority')%></th>
      </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.time_limit %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('view.show'), task_path(task.id) %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task.id), data: { confirm: t('view.confirm_edit') } %><td>
        <td><%= link_to t('view.delete'), task_path(task.id), method: :delete , data: { confirm: t('view.confirm_delete') }%><td>
      </tr>
    <% end %>
    </table>
  </div>