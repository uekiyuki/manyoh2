<h1>ユーザー一覧</h1>

  <%= link_to t('Sing_up'), new_admin_user_path, class: 'btn btn-primary' %>

<table>
  <tr>
    <th><%= t('name')%></th>
    <th><%= t('email')%></th>
    <th><%= t('admin')%></th>
    <th><%= t('created_at')%></th>
    <th><%= t('updated_at')%></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin? ? "あり":"なし" %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= link_to t('edit'), edit_admin_user_path(user), data: { confirm: t('view.confirm_edit') }, class: 'btn btn-danger' %><td>
    <td><%= link_to t('view.delete'), [:admin, user], method: :delete, data:{confirm: "ユーザー「#{user.name}」を削除します。よろしいですか？"},class: 'btn btn-danger'%><td>
  </tr>
<% end %>

</table>